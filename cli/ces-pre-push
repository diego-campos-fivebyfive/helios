#!/usr/bin/env bash

branch=$(git symbolic-ref HEAD | sed -e 's,.*/\(.*\),\1,')

if [ $branch != 'master' ]; then
  exit 0
fi

message="Lembre-se, pushs devem ser feitos para a Branch e nÃ£o para a Master, gostaria de continuar? [y|n]"

read -p $message -n 1 -r < /dev/tty
echo $REPLY | grep -E '^[Yy]$' > /dev/null
