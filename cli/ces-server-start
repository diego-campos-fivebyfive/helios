#!/usr/bin/env bash

cd $SICES_PATH

if [ -z ${1+x} ] || [ $1 == '--development' ]; then

  echo "Starting Development Bundle App on port: $BUNDLE_PORT and Sices Server on port: 8000"

  php app/console server:run &

  cd bundle/app
  yarn install
  node_modules/.bin/nodemon index.js &

  # Enable job control
  set -m

  while :
  do
    read input
    [[ $input == finish ]] && break

    # Run the command in background
    bash -c "$input" &

    # Move the command back-into foreground
    fg %-

  done

elif [ $1 == '--bundle' ]; then

  echo "Sices starting bundle on port $BUNDLE_PORT"
  cd bundle/app
  yarn install
  node_modules/.bin/pm2 start index.js -n "bundle"

elif [ $1 == '--isquikmock' ]; then

  echo "Starting Bundle Test (Isquik Mock) on port: $ISQUIK_PORT"

  cd bundle/test
  yarn install
  node_modules/.bin/nodemon index.js

fi

