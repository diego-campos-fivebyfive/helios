#!/usr/bin/env bash

cd $SICES_PATH

if [ -z ${1+x} ] || [ $1 == '--development' ]; then

  echo "Importing Sices development variables..."
  source ces-variables-ci --development

  echo "Starting Development Bundle App on $CES_BUNDLE_HOST:$CES_BUNDLE_PORT and Sices Server on $CES_SICES_HOST:$CES_SICES_PORT"

  php app/console server:run &

  cd bundle/app
  yarn install
  node_modules/.bin/nodemon index.js &

  # Enable job control
  set -m

  while :
  do
    read input
    [[ $input == finish ]] && break

    # Run the command in background
    bash -c "$input" &

    # Move the command back-into foreground
    fg %-

  done

elif [ $1 == '--isquikmock' ]; then

  echo "Importing Sices development variables..."
  source ces-variables-ci --development

  echo "Starting Bundle Test (Isquik Mock) on: $CES_ISQUIK_HOST:$CES_ISQUIK_PORT"
  cd bundle/test
  yarn install
  node_modules/.bin/nodemon index.js

fi

