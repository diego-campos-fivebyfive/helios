{% extends view('layout') %}

{% block body %}

    {% set special_behavior = false %}
    
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            {% if errors is defined and errors|length %}

                <div class="panel panel-danger" style="margin-top: 2rem;">
                    <div class="panel-heading">
                        Verifique os erros abaixo
                    </div>
                    <div class="panel-body">
                        {% for error in errors %}
                            <div class="alert alert-danger">
                                {{ error|trans }} <br>
                            </div>
                            
                            {% if 'projects_quota_is_reached' == error %}
                                {% set special_behavior = 'projects_quota_is_reached' %}
                            {% endif %}
                            
                        {% endfor %}
                    </div>
                </div>

            {% endif %}

            {% if 'projects_quota_is_reached' == special_behavior %}
                <div>
                    <h3 class="text-center"> Para projetos ilimitados, clique no bot√£o abaixo. </h3> 
                    <a href="{{ path('signature_create') }}" class="btn btn-primary btn-block btn-lg">
                        <i class="{{ icon('signature') }}"></i>  {{ 'Subscribe'|trans }}
                    </a>
                </div>
            {% endif %}
            
        </div>                               
    </div>

{% endblock %}