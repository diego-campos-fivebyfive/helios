<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox product-detail flow-h">
                <div class="ibox-content flow-lg">

                    <div class="row">

                        <div class="col-md-5">
                            {#
                            <h2 class="font-bold m-b-xs">

                            </h2>#}
                            <div class="m-t-md">
                                <h2 class="product-main-price">
                                    {{ module.model }}
                                </h2>
                            </div>
                            <hr>
                            <div class="product-images">
                                <div>
                                    <img class="col-md-12" src="{{ module.image|componentFilePath }}"/>
                                </div>
                            </div>

                        </div>

                        <div class="col-md-7">
                            <div class="table-responsive">
                                <table class="table table-stripped table-bordered table-hover">
                                    <thead>
                                    <tr>
                                        <th colspan="2">
                                            Dados gerais
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td width="60%">{{ 'Maker'|trans }}</td>
                                        <td>{% if module.maker %} {{ module.maker.name }} {% endif %}</td>
                                    </tr>
                                    <tr>
                                        <td>{{ 'Model'|trans }}</td>
                                        <td>{{ module.model }}</td>
                                    </tr>
                                    <tr>
                                        <td>Tipo de Célula</td>
                                        <td>{{ module.cellType }}</td>
                                    </tr>
                                    <tr>
                                        <td>Número de Células</td>
                                        <td>{{ module.cellNumber }}</td>
                                    </tr>
                                    <tr>
                                        <td>Tipo de Conexão</td>
                                        <td>{{ module.connectionType }}</td>
                                    </tr>
                                    <tr>
                                        <td>Comprimento</td>
                                        <td>{{ module.length }} M</td>
                                    </tr>
                                    <tr>
                                        <td>Largura</td>
                                        <td>{{ module.width }} M</td>
                                    </tr>
                                    <tr>
                                        <td>Altura</td>
                                        <td>{{ module.height }} M</td>
                                    </tr>
                                    {% if module.datasheet %}
                                        <tr>
                                            <td>{{ 'Datasheet'|trans }} (PDF)</td>
                                            <td>
                                                <a href="{{ module.datasheet|componentFilePath }}" target="_blank">
                                                    {{ 'View'|trans }}
                                                </a>
                                            </td>
                                        </tr>
                                    {% endif %}
                                    </tbody>

                                    <thead>
                                    <tr>
                                        <th colspan="2">
                                            Dados do STC
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>Potência</td>
                                        <td>{{ module.maxPower|decimal }} W</td>
                                    </tr>
                                    <tr>
                                        <td>Tensão de Operação (Vmp)</td>
                                        <td>{{ module.voltageMaxPower|decimal }} V</td>
                                    </tr>
                                    <tr>
                                        <td>Corrente de Operação (Imp)</td>
                                        <td>{{ module.currentMaxPower|decimal }} A</td>
                                    </tr>
                                    <tr>
                                        <td>Tensão de Circuito Aberto (Voc)</td>
                                        <td>{{ module.openCircuitVoltage|decimal }} V</td>
                                    </tr>
                                    <tr>
                                        <td>Corrente de Curto Circuito (Isc)</td>
                                        <td>{{ module.shortCircuitCurrent|decimal }} A</td>
                                    </tr>
                                    <tr>
                                        <td>Eficiência</td>
                                        <td>{{ module.efficiency|decimal }}%</td>
                                    </tr>
                                    </tbody>

                                    <thead>
                                    <tr>
                                        <th colspan="2">
                                            Temperaturas
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>Temperatura Nominal de Operação da Célula (NOCT)</td>
                                        <td>{{ module.temperatureOperation|decimal }} ºC</td>
                                    </tr>
                                    <tr>
                                        <td>Coeficiente de Temperatura (Pmax)</td>
                                        <td>{{ module.tempCoefficientMaxPower|decimal }} % / ºC </td>
                                    </tr>
                                    <tr>
                                        <td>Coeficiente de Temperatura (Voc)</td>
                                        <td>{{ module.tempCoefficientOpenCircuitVoltage|decimal }} % / ºC </td>
                                    </tr>
                                    <tr>
                                        <td>Coeficiente de Temperatura (Isc)</td>
                                        <td>{{ module.tempCoefficientShortCircuitCurrent|decimal }} % / ºC </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>