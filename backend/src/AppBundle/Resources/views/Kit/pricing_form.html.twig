{{ form_start(form,{attr:{id:'kit_pricing'}}) }}

<div class="form-group col-md-4">
    <label> Nome / Descrição </label>
    {{ form_widget(form.name,{attr:{class:'form-control',placeholder:'Nome / Descrição'}}) }}
</div>

<div class="form-group col-md-2">
    <label> Aplicado sobre </label>
    {{ form_widget(form.target,{attr:{class:'form-control', placeholder:'Sobre'}}) }}
</div>
<div class="form-group col-md-2">
    <label> Percentual </label>
    {{ form_widget(form.percent,{attr:{class:'form-control text-center'}}) }}
</div>

<div class="form-group col-md-2">
    <label> &nbsp; </label>
    <button id="kit_pricing_btn" type="submit" class="btn btn-block btn-primary ladda-button" data-style="zoom-in">
        <i class="fa fa-plus"></i> {{ 'Add'|trans }}
    </button>
</div>

<div class="form-group col-md-2">
    <label> &nbsp; </label>
    <a class="btn btn-block btn-default" onclick="KitPricing.form.reset();">
        <i class="fa fa-times"></i> {{ 'Cancel'|trans }}
    </a>
</div>

{{ form_end(form) }}

{% include view('helper.numbers') %}

<script>
    $(function(){
        Numbers.mask($('#kit_pricing_percent'));
    });
</script>