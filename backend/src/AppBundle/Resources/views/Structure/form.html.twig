{% extends view('layout') %}

{% block styles %}
    {% include view('helper.plugins_css') %}
{% endblock %}

{% block body %}

    <style>
        .btn {
            margin: 2px;
        }
        .check-label {
            vertical-align: middle;
            padding-right: 5px;
        }
        #dependency_ratio{
            margin-top: 2px !important;
            text-align: center;
        }
    </style>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5></h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-12">

                                {{ form_start(form,{attr:{enctype:'multipart/form-data'}}) }}

                                <div class="panel panel-success">
                                    <div class="panel-heading">
                                        &nbsp; Regras de Negócio
                                    </div>
                                    <div class="panel-body">
                                        <div class="form-group col-md-6">
                                            {{ form_label(form.princingLevels, 'Disponível nos níveis de desconto') }}
                                            {{ form_widget(form.princingLevels, {attr:{class:'form-control'}}) }}
                                        </div>
                                        <div class="form-group col-md-6">
                                            {{ form_label(form.generatorLevels, 'Disponível no gerador') }}
                                            {{ form_widget(form.generatorLevels, {attr:{class:'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="panel panel-primary input_data">
                                    <div class="panel-heading">
                                        &nbsp; Dados Técnicos
                                    </div>
                                    <div class="panel-body">

                                        <div style="width: 100%; float: left">
                                            <div class="form-group col-md-3">
                                                {{ form_label(form.code, 'Código') }}
                                                <div class="input-group m-b">
                                                    {{ form_widget(form.code,{attr:{class:'form-control'}}) }}
                                                </div>
                                            </div>

                                            <div class="form-group col-md-3">
                                                {{ form_label(form.maker, 'Fabricante') }}

                                                {{ form_widget(form.maker,{attr:{class:'form-control'}}) }}
                                            </div>

                                            <div class="form-group col-md-3">
                                                {{ form_label(form.type, 'Tipo') }}
                                                <div class="input-group">
                                                    {{ form_widget(form.type,{attr:{class:'form-control'}}) }}
                                                </div>
                                            </div>

                                            <div class="form-group col-md-3">
                                                {{ form_label(form.subtype, 'Sub-Tipo') }}
                                                <div class="input-group">
                                                    {{ form_widget(form.subtype,{attr:{class:'form-control'}}) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-3">
                                            {{ form_label(form.size, 'Tamanho') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.size,{attr:{class:'form-control'}}) }}
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6">
                                            {{ form_label(form.description, 'Descrição da Estrutura') }}
                                            <div class="input-group m-b col-md-12">
                                                {{ form_widget(form.description,{attr:{class:'form-control'}}) }}
                                            </div>
                                        </div>

                                        <div class="form-group col-md-3">
                                            {{ form_label(form.position, 'Posição') }}
                                            {{ form_widget(form.position, {attr:{class:'form-control'}}) }}
                                        </div>

                                        <div class="col-md-12">
                                            <div class="form-group col-md-6">
                                                <label> Datasheet (PDF) </label>
                                                <input type="file" name="dataSheet" accept="application/pdf">
                                                {% if structure.datasheet %}
                                                <span class="label info">
                                                        Este componente já possui datasheet
                                                    </span>
                                                 {% endif %}
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label> Imagem (JPG) </label>
                                                <input type="file" name="image" accept="image/jpeg">
                                                 {% if structure.image %}
                                                <span class="label info">
                                                        Este componente já possui imagem
                                                    </span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                        <button type="submit" name="intention" value="save" class="btn btn-primary pull-right">
                                            <i class="fa fa-save"></i> {{ 'Save'|trans }}
                                        </button>
                                        <a href="{{ path('structure_index') }}">
                                            <button class="btn btn-success btn-xd pull-right">{{'Voltar'|trans}}</button>
                                        </a>
                                </div>

                                <div class="form-group">
                                    {{ form_rest(form) }}
                                </div>

                                {{ form_end(form) }}

                            </div>

                            {# DEPENDENCIES CONTAINER #}
                            <div class="col-md-12" id="dependency_container" style="margin-top: 10px;"></div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}

    {% include view('helper.chosen_levels') %}

    {% if structure.id %}
    {% include view('helper.plugins_js') %}
        <script>
            $('#dependency_container').load('{{ path('component_dependency_panel',{family:'structure', component:structure.id}) }}');
        </script>
    {% endif %}

    <script>
        var sanitize = function(element){
            function clear(v){ return v.replace(/\D+/g,''); }
            var value = element.val();
            var backup = value.replace(/\./g,',');
            value = clear(value);
            if(backup.indexOf(',') > 0){
                var commas = backup.split(',');
                value = clear(commas[0])+',';
                if(commas[1].length){
                    value += clear(commas[1]);
                }
            }
            if(0 == backup.indexOf('-')){
                if(2 == backup.split('-').length){
                    value = '-' + value;
                }
            }
            element.val(value);
        };
    </script>

    <script>

        var custom_mask = function(element){
            element.on('keyup', function(){
                sanitize(element);
            });
        };

        var common_mask = {pattern: '##,##', reverse: true};
        var targets = {
            'structure_size': common_mask,
            'structure_cmvApplied': common_mask,
            'structure_cmvProtheus': common_mask
        };

        $.each(targets, function (id, options) {
            custom_mask($('#'+id));
        });

    </script>

    {% include view('helper.chosen') with({
    element: '#structure_maker',
    path: path('maker_fast_create')
    }) %}

{% endblock %}
