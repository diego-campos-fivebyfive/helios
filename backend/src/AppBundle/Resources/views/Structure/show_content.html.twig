<style>
    .component-levels {
        padding-top: 10px;
    }
</style>

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">

            <div class="ibox product-detail flow-h">
                <div class="ibox-content flow-md">

                    <div class="row">

                        <div class="col-md-5">
                            <div class="m-t-md">
                                <h2 class="product-main-price">
                                    {{ structure.description }}
                                </h2>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="product-images">
                                    <div>
                                        <img class="col-md-12" src="{{ structure.image|componentFilePath }}"/>
                                    </div>
                                </div>
                            </div>

                            {% if app.user.isPlatform %}
                                <div class="row component-levels">
                                    <table class="table table-stripped table-bordered table-hover">
                                        <thead>
                                        <tr>
                                            <th>
                                                Disponível nos níveis
                                            </th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for level in structure.generatorLevels %}
                                            <tr>
                                                <td>{{ level|trans }}</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% endif %}

                        </div>

                        <div class="col-md-7">
                            <div class="table-responsive">
                                <table class="table table-stripped table-bordered table-hover">
                                    <thead>
                                    <tr>
                                        <th colspan="2">
                                            Dados Gerais
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td width="40%"> Código</td>
                                            <td>{{ structure.code }}</td>
                                        </tr>
                                        {% if structure.datasheet %}
                                            <tr>
                                                <td>{{ 'Datasheet'|trans }} PDF</td>
                                                <td>
                                                    <a href="{{ structure.datasheet|componentFilePath }}" target="_blank">
                                                        {{ 'View'|trans }}
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endif %}
                                    </tbody>

                                    <thead>
                                    <tr>
                                        <th colspan="2">
                                            Dados Técnicos
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>Tipo</td>
                                        <td>{{ structure.type }}</td>
                                    </tr>
                                    <tr>
                                        <td>Sub-Tipo</td>
                                        <td>{{ structure.subtype }}</td>
                                    </tr>
                                    <tr>
                                        <td>Descrição</td>
                                        <td>{{ structure.description }}</td>
                                    </tr>
                                    <tr>
                                        <td>Tamanho</td>
                                        <td>{{ structure.size }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>