{% extends "FOSUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}
    {{ register is defined and register.isInit ? 'Criar uma conta' : 'Concluir registro' }}
{% endblock %}

{% block fos_user_content %}

    {% if account %}
        <style>
            .middle-box {
                min-width: 70%;
            }
        </style>

        <h2>Prezado {{ account.owner.name }}, </h2>
        <p style="font-size: 18px;">
            Pedimos que verifique o email <strong> {{ account.owner.email }} </strong> para validação de sua conta.
        </p>

        <p>
            <a href="{{ path('fos_user_security_login') }}">
                Voltar para o início
            </a>
        </p>

    {% else %}

        <h2> Desculpe, não há dados aqui para você. </h2>

    {% endif %}

{% endblock %}
