{{ form_start(form) }}

<div class="row">
    <div class="form-group col-lg-6">
         <span class="hide">
            {{ form_widget(form.component) }}
        </span>
        <div class="input-group">
            {{ form_widget(form.price,{'attr':{'class':'form-control'}}) }}
            <span class="input-group-btn">
                <button type="submit" class="btn btn-primary ladda-button" data-style="slide-up">
                    <i class="fa fa-save"></i> {{ 'Save'|trans }}
                </button>
            </span>
        </div>
    </div>
    <div class="form-group col-lg-6">
        <small>
            <i class="fa fa-info-circle"></i>
            Você pode configurar um novo preço ou manter o fornecido pela plataforma
        </small>
    </div>
</div>

{{ form_end(form) }}