{% macro render_result(products) %}

    {#{% set products = pagination.items %}#}

    <table id="table_catalog" data-filter="#catalog_filter" class="table table-striped" data-page-size="5">
        <thead>
        <tr>
            <th> {{ 'Name'|trans }} </th>
            <th> {{ 'Description'|trans }} </th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody id="render_result">

        {% for product in products %}

            <tr>
                <td> {{ product.name }} </td>
                <td> {{ product.description }} </td>
                <td>
                    <a onclick="add_to_catalog('{{ path('catalog_add',{'slug':product.slug}) }}', this);" class="btn btn-sm btn-success">
                        <i class="fa fa-check"></i> {{ 'Add To Catalog'|trans }}
                    </a>
                </td>
            </tr>

        {% endfor %}

        </tbody>
        <tfoot>
        <tr>
            <td colspan="3">
                <div class="pagination-centered">
                    <ul class="pagination"></ul>
                </div>
                {#<div class="btn-group">
                    {{ knp_pagination_render(pagination) }}
                </div>#}
            </td>
        </tr>
        </tfoot>
    </table>

{% endmacro %}

{% import _self as this %}

{% if not ajax %}

    <script>

        var requesting = false,
            render_result = $('#render_result');

        function request_catalog(config){

            if('object' != typeof config.data){
                config.data = {};
            }

            if(!requesting) {
                requesting = true;

                var data = $.extend({ajax:true}, config.data, true);

                $.ajax({
                    url: config.url,
                    method: 'get',
                    data: data,
                    success: function (response) {
                        render_result.html(response);
                        requesting = false;
                    }
                });
            }
        }

        function init_paginator(){

            var page_links = render_result.find('ul.pagination').find('li>a');

            page_links.on('click', function (e) {

                e.preventDefault();
                e.stopPropagation();

                request_catalog({
                    url: $(this).attr('href')
                });

            });
        }

        $('#form_search').on('submit', function(event){
            event.preventDefault();

            requesting = false;
            request_catalog({
                url: $(this).attr('action'),
                data: {search: $(this).find('[name="search"]').val()}
            });

        });

        function add_to_catalog(url, e){
            var link = $(e), row = link.closest('tr');

            $.ajax({
                url: url,
                method: 'post',
                success: function(response){
                    console.log(response);
                }
            });
        }

    </script>


