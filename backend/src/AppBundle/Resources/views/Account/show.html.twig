{% extends view('layout') %}

{% block body %}

    <div class="wrapper wrapper-content">
        <div class="row animated fadeInRight">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h3>
                        <label> {{ 'Account'|trans }}: </label>
                        {{ account.firstname }}
                    </h3>
                    <div class="btn-group">
                        <a class="btn btn-default"
                           href="{{ path('account_index',{'token':account.token}) }}">
                            <i class="fa fa-arrow-left"></i> Voltar
                        </a>
                        <a class="btn btn-info"
                           href="{{ path('account_update',{'token':account.token}) }}">
                            <i class="fa fa-edit"></i> {{ 'Edit'|trans }}
                        </a>
                    </div>
                </div>
                <div class="ibox-content no-padding border-left-right">
                </div>
                <div class="ibox-content profile-content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    &nbsp; Informações da Empresa
                                </div>
                                <div class="panel-body">
                                    <div class="col-md-4">
                                        <div class="col-md-12">
                                            <label> Nome Fantasia: </label>
                                            {{ account.firstname }}
                                        </div>
                                        <div class="col-md-12">
                                            <label> Razão Social: </label>
                                            {{ account.lastname }}
                                        </div>
                                        <div class="col-md-12">
                                            <label> CNPJ: </label>
                                            {{ account.document }}
                                        </div>
                                        <div class="col-md-12">
                                            <label> Inscrição Estadual: </label>
                                            {{ account.ExtraDocument }}
                                        </div>
                                        <div class="col-md-12">
                                            <label> {{ 'Email'|trans }}: </label>
                                            {{ account.email }}
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="col-md-12">
                                            <label> {{ 'Phone'|trans }}: </label>
                                            {{ account.phone }}
                                        </div>
                                        <div class="col-md-12">
                                            <label> {{ 'Postcode'|trans }}: </label>
                                            {{ account.postcode }}
                                        </div>
                                        <div class="col-md-12">
                                            <label> {{ 'State'|trans }}: </label>
                                            {{ account.state }}
                                        </div>
                                        <div class="col-md-12">
                                            <label> {{ 'City'|trans }}: </label>
                                            {{ account.city }}
                                        </div>
                                        <div class="col-md-12">
                                            <label> {{ 'District'|trans }}: </label>
                                            {{ account.district }}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="col-md-12">
                                            <label> {{ 'Street'|trans }}:  </label>
                                            {{ account.street }}
                                        </div>
                                        <div class="col-md-12">
                                            <label> {{ 'Number'|trans }}: </label>
                                            {{ account.number }}
                                        </div>
                                        <div class="col-md-12">
                                            <label> Nível de desconto: </label>
                                            {{ account.level }}
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="panel panel-success">
                                <div class="panel-heading">
                                    Usuários Vinculados
                                </div>
                                <div class="panel-body">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th class="col-md-4">Nome</th>
                                                <th class="col-md-4">E-mail</th>
                                                <th class="col-md-4">Nivel de Usuário</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for member in members %}
                                                {% set is_user = member.user and member.user.same(app.user) %}
                                                {% set is_owner = member.isOwner or member.getAttribute('is_owner', false) %}
                                                {% set is_master = member.masterOwner %}

                                                <tr>
                                                    <td> {{ member.firstname }} </td>
                                                    <td> {{ member.email }} </td>
                                                    <td data-value="{{ member.isOwner ? 'a' : 'z' }}">
                                                        {% if is_owner %}
                                                            <div class="label label-{{ is_master ? 'info' : 'default' }}" style="width: 100%;">
                                                                {{ is_master ? 'Account Owner'|trans : 'Administrator'|trans }}
                                                            </div>
                                                        {% else %}
                                                            <div class="label label-{{ is_user ? 'info' : 'default' }}" style="width: 100%;">
                                                                {{ is_user ? 'Account User'|trans : 'Usuário Comum'|trans }}
                                                            </div>
                                                        {% endif %}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
