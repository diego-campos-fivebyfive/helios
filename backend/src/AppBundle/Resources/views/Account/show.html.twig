{% extends view('layout') %}

{% block body %}

    <div class="wrapper wrapper-content">
        <div class="row animated fadeInRight">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h3>
                        {{ account.firstname }}
                    </h3>
                </div>
                <div class="ibox-content no-padding border-left-right">
                </div>
                <div class="ibox-content profile-content">
                    <div class="row">
                        <div class="col-md-7">

                            <div class="form-group col-md-6">
                                <label> {{ 'Name'|trans }} </label>
                                {{ account.firstname }}
                            </div>

                            <div class="form-group col-md-6">
                                <label> Razão Social</label>
                                {{ account.lastname }}
                            </div>

                            <div class="form-group col-md-6">
                                <label> Endereço </label>
                                <i class="fa fa-map-marker"></i> {{ account.city }} - {{ account.state }}
                            </div>

                            <div class="form-group col-md-6" style="margin-bottom: 25px;">
                                <label>{{ 'Company'|trans }}</label>

                            </div>

                            <div class="form-group col-md-6">
                                <label> {{ 'Email'|trans }} </label>
                            </div>

                            <div class="form-group col-md-6">
                                <label> {{ 'Phone'|trans }} </label>
                            </div>

                            <div class="form-group col-md-12">
                                <label> Observações </label>
                            </div>

                        </div>

                        <div class="col-md-5">

                            {#<div class="form-group hide">
                                <label>Latitude</label>
                                {{ form_widget(form.coordinates.latitude,{'attr':{'class':'form-control','placeholder':'Longitude'|trans}}) }}
                            </div>
                            <div class="form-group hide">
                                <label>Longitude</label>
                                {{ form_widget(form.coordinates.longitude,{'attr':{'class':'form-control','placeholder':'Longitude'|trans}}) }}
                            </div>

                            <div class="form-group" style="margin-bottom:0;">
                                <label> {{ 'Address'|trans }} </label>
                                {{ form_widget(form.street,{'attr':{'class':'form-control','placeholder':'Address'|trans}}) }}
                            </div>
                            <div id="map"></div>#}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}
    <!-- Peity -->
    <script src="{{ asset('inspinia/js/plugins/peity/jquery.peity.min.js') }}"></script>

    <!-- Peity -->
    <script src="{{ asset('inspinia/js/demo/peity-demo.js') }}"></script>

{% endblock %}
