{% extends view('layout') %}

{% block styles %}
    <style>
        .product-imitation {
            background-repeat: no-repeat !important;
            background-size: contain !important;
            background-position: center !important;
        }

        #form_filtration > .form-group > .col-sm-2 {
            display: none;
        }
    </style>
{% endblock %}

{% block body %}

    {% set _route = app.request.attributes.get('_route') %}

    {% set display = query.display %}
    {% set is_grid = 'grid' == display %}
    {% set is_strict = 1 == query.strict %}

    {% set _route_params = app.request.attributes.get('_route_params')|merge(query|merge({'display':is_grid ? 'list' : 'grid' })) %}

    {#{{ is_grid }}#}
    <div class="modal inmodal fade" id="e_modal_details" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-body" id="detail_stringbox"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">
                        {{ 'Close'|trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>

    {% set stringBoxes = pagination.items %}

    {% macro stringBox_buttons(stringBox, extra) %}

        {% set member = extra %}

       <div class="btn-group btn-group-sm btn-group-justified">
           <a data-url="{{ path('stringbox_show', { 'id': stringBox.id }) }}"
              data-toggle="modal"
              data-target="#modal_details"
              class="btn btn-default">
               <i class="fa fa-eye"></i> {{ 'View'|trans }}
           </a>

            {% if member.isPlatformMaster %}
                <a href="{{ path('stringbox_edit', { 'id': stringBox.id }) }}"
                   class="btn btn-success">
                    <i class="fa fa-pencil"></i> {{ 'Edit'|trans }}
                </a>
                <a data-delete="{{ path('stringbox_delete', { 'id': stringBox.id}) }}"
                   class="btn btn-danger">
                    <i class="fa fa-trash"></i> {{ 'Delete'|trans }}
                </a>
            {% endif %}

        </div>

    {% endmacro %}

    {% import _self as handler %}

    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            {{ knp_pagination_filter(pagination, {'s.description, s.code, s.inputs, s.outputs, s.fuses, m.name':''}) }}

            <div class="col-md-2">
                <a href="{{ path(_route, _route_params) }}" class="btn btn-default btn-block">
                    <i class="fa fa-{{ is_grid ? 'list' : 'th' }}"></i> {{ is_grid ? 'Exibir Lista'|trans : 'Exibir Grade'|trans }}
                </a>
            </div>

            {% if member.isPlatformMaster %}
            <span class="pull-right col-md-2">
               <a class="pull-right btn btn-primary" href="{{ path('stringbox_create') }}">
                   <i class="fa fa-plus-square" aria-hidden="true"></i> Cadastrar Stringbox</a>
            </span>
            {% endif %}
        </div>

        <div class="row" id="real-content">

            <div class="{{ not is_grid ? 'col-md-12' }}">

                {% if is_grid %}

                    {% for stringBox in stringBoxes %}

                        <div class="col-md-3" id="component{{ stringBox.id }}">
                            <div class="ibox">
                                <div class="ibox-content product-box">

                                    <div class="product-imitation" style="background-image: url({{ stringBox.image|componentFilePath }}); background-repeat: no-repeat;">
                                    </div>
                                    <div class="product-desc">

                                        <a data-url="{{ path('stringbox_show', { 'id': stringBox.id }) }}"
                                           data-toggle="modal"
                                           data-target="#modal_details"
                                           class="product-name">
                                            {{ stringBox.description|slice(0,18) }} <br>
                                            <small>
                                                {{ stringBox.code|slice(0,25) }}&nbsp;
                                            </small>
                                        </a>

                                        <div class="small m-t-xs">
                                            Entradas:
                                            {{ stringBox.inputs }}
                                        </div>

                                        <div class="small m-t-xs">
                                            Saídas:
                                            {{ stringBox.outputs }}
                                        </div>

                                        <div class="small m-t-xs">
                                            Fusíveis:
                                            {{ stringBox.fuses }}
                                        </div>


                                        <div class="hr-line-dashed"></div>

                                         <div class="row">
                                            {{ handler.stringBox_buttons(stringBox,member) }}
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    {% endfor %}

                {% else %}

                    <div class="ibox-content flow-h">

                        <table class="table table-stripped flow-lg">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Descrição</th>
                                    <th>Entradas</th>
                                    <th>Saídas</th>
                                    <th>Fusíveis</th>
                                    <th class="col-md-2 col-xs-3">Ações</th>
                                </tr>
                            </thead>
                            <tbody>

                            {% for stringBox in stringBoxes %}

                                <tr class="gradeY">
                                    <td> {{ stringBox.code }} </td>
                                    <td> {{ stringBox.description }} </td>
                                    <td> {{ stringBox.inputs }} </td>
                                    <td> {{ stringBox.outputs }} </td>
                                    <td> {{ stringBox.fuses }} </td>
                                    <td class="col-md-3">

                                        <div class="btn-group btn-group-sm btn-group-justified">
                                            <a data-url="{{ path('stringbox_show', { 'id': stringBox.id }) }}"
                                               data-toggle="modal"
                                               data-target="#modal_details"
                                               class="btn btn-default">
                                                <i class="fa fa-eye"></i> {{ 'View'|trans }}
                                            </a>

                                            {% if member.isAdmin or member.isPlatformAdmin or member.isPlatformMaster %}
                                            <a href="{{ path('stringbox_edit', { 'id': stringBox.id }) }}"
                                               class="btn btn-success">
                                                <i class="fa fa-pencil"></i> {{ 'Edit'|trans }}
                                            </a>
                                            <a data-delete="{{ path('stringbox_delete', { 'id': stringBox.id}) }}"
                                               class="btn btn-danger">
                                                <i class="fa fa-trash"></i> {{ 'Delete'|trans }}
                                            </a>
                                            {% endif %}

                                        </div>

                                    </td>
                                </tr>

                            {% endfor %}

                            </tbody>
                        </table>

                    </div>

                {% endif %}
            </div>

        </div>

        <div class="row text-center">
            <div class="btn-group bt-xs">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>

    </div>


{% endblock %}

{% block scripts %}

    <script>

        $(function () {

            var detail_stringbox = $('#detail_stringbox');
            var detail_spinner = detail_stringbox.html();
            $('[data-target="#modal_details"]').on('click', function(){
                var url = $(this).data('url');
                if (url) {
                    $('#e_modal_details').modal('show');
                    detail_stringbox.html(detail_spinner);
                    $.ajax({
                        url: url,
                        method: 'get',
                        success: function (response) {
                            detail_stringbox.html(response);
                        }
                    });
                } else {
                    detail_stringbox.html('<h1> Nenhum componente selecionado para visualização </h1>');
                }
            });

            var dataDelete = $('[data-delete]');
            if(dataDelete.length){
                dataDelete.on('click', function () {
                    var url = $(this).data('delete');
                    swal({
                        title: "Confirma exclusão deste Stringbox?",
                        text: null,
                        type: "info",
                        showCancelButton: true,
                        cancelButtonText: "{{ 'Cancel'|trans }}",
                        confirmButtonColor: "#DD6B55",
                        confirmButtonText: "{{ 'Confirm'|trans }}",
                        closeOnConfirm: false
                    }, function () {
                        swal.close();
                        $.ajax({
                            url: url,
                            method: 'post',
                            data: {_method:'delete'},
                            complete: function (xhr) {
                                if (200 == xhr.status) {
                                    swal("", xhr.responseJSON['message'], "success");
                                    window.setTimeout(function(){
                                        location.reload();
                                        swal.close();
                                    }, 1000);
                                } else {
                                    swal("Oops!", xhr.responseJSON['message'], "error");
                                }
                            },
                            beforeSend: function () {
                                swal({
                                    title: "Excluindo...",
                                    text: "Aguarde",
                                    type: "info",
                                    showConfirmButton: false
                                });
                            }
                        });
                    });
                });
            }

        });


    </script>

{% endblock %}
