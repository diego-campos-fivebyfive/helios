<style>
    .level-table {
        padding-top: 10px;
    }
</style>

<div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            <div class="col-lg-12">

                <div class="ibox product-detail flow-h">
                    <div class="ibox-content flow-md">

                        <div class="row">

                            <div class="col-md-5">

                                {#<h2 class="font-bold m-b-xs">

                                </h2>#}
                                <div class="m-t-md">
                                    <h2 class="product-main-price">
                                        {{ stringBox.description }}
                                    </h2>
                                </div>
                                <hr>

                                <div class="row">
                                    <div class="product-images">
                                        <div>
                                            <img class="col-md-12" src="{{ stringBox.image|componentFilePath }}"/>

                                        </div>
                                    </div>
                                </div>

                                {% if app.user.isPlatform %}
                                    <div class="row component-levels">
                                        <table class="table table-stripped table-bordered table-hover">
                                            <thead>
                                            <tr>
                                                <th>
                                                    Disponível nos níveis
                                                </th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for level in stringBox.generatorLevels %}
                                                <tr>
                                                    <td>{{ level|trans }}</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                {% endif %}

                            </div>

                            <div class="col-md-7">
                                <div class="table-responsive">
                                    <table class="table table-stripped table-bordered table-hover">
                                        <thead>
                                        <tr>
                                            <th colspan="2">
                                                Dados Gerais
                                            </th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <td width="35%">Código</td>
                                            <td>{{ stringBox.code }}</td>
                                        </tr>
                                        <tr>
                                            <td width="35%">Fabricante</td>
                                            <td>{{ stringBox.maker }}</td>
                                        </tr>
                                        <tr>
                                            <td>Descrição</td>
                                            <td>{{ stringBox.description }}</td>
                                        </tr>
                                        {% if stringBox.datasheet %}
                                            <tr>
                                                <td>{{ 'Datasheet'|trans }} PDF</td>
                                                <td>
                                                    <a href="{{ stringBox.datasheet|componentFilePath }}" target="_blank">
                                                        {{ 'View'|trans }}
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endif %}

                                        </tbody>

                                        <thead>
                                        <tr>
                                            <th colspan="2">
                                                Dados Técnicos
                                            </th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <td>Entradas</td>
                                            <td>{{ stringBox.inputs }}</td>
                                        </tr>
                                        <tr>
                                            <td>Saídas</td>
                                            <td>{{ stringBox.outputs }}</td>
                                        </tr>
                                        <tr>
                                            <td>Fusíveis</td>
                                            <td>{{ stringBox.fuses }}</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
