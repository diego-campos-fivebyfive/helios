{% extends view('layout') %}

{% block body %}

    <style>
        .input-group.m-b{
            width: 50%;
        }
        .btn {
            margin: 2px;
        }
    </style>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5></h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-12">

                                {{ form_start(form,{attr:{enctype:'multipart/form-data'}}) }}

                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        &nbsp; Dados gerais
                                    </div>
                                    <div class="panel-body">

                                        <div class="form-group col-md-3">
                                            {{ form_label(form.code, 'Código') }}
                                            {{ form_widget(form.code,{attr:{class:'form-control'}}) }}
                                        </div>

                                        <div class="form-group col-md-3">
                                            {{ form_row(form.maker,{attr:{class:'form-control'}}) }}
                                        </div>

                                        <div class="form-group col-md-6">
                                            {{ form_row(form.description,{attr:{class:'form-control'}}) }}
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label> Datasheet (PDF) </label>
                                            <input type="file" name="dataSheet" accept="application/pdf">
                                            {% if variety.datasheet %}
                                                <span class="label info">
                                                    Este componente já possui datasheet
                                                </span>
                                            {% endif %}
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label> Imagem (JPG) </label>
                                            <input type="file" name="image" accept="image/jpeg">
                                            {% if variety.image %}
                                                <span class="label info">
                                                    Este componente já possui imagem
                                                </span>
                                            {% endif %}
                                        </div>

                                    </div>
                                </div>

                                <div class="panel panel-success technical_data">
                                    <div class="panel-heading">
                                        &nbsp; Dados Técnicos
                                    </div>
                                    <div class="panel-body">

                                        <div class="form-group col-md-4">
                                            {{ form_label(form.type, 'Tipo') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.type,{attr:{class:'form-control'}}) }}
                                            </div>
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_label(form.subtype, 'Sub-Tipo') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.subtype,{attr:{class:'form-control'}}) }}
                                            </div>
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_label(form.power, 'Potência') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.power,{attr:{class:'form-control'}}) }}
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="form-group col-md-1">
                                    {{ form_label(form.status, 'Ativo') }}
                                    <br>
                                    {{ form_widget(form.status) }}
                                </div>
                                <div class="form-group col-md-4">
                                    {{ form_label(form.available, 'Disponível para venda') }}
                                    <br>
                                    {{ form_widget(form.available)}}
                                </div>
                                <div class="form-group">
                                    <button type="submit" name="intention" value="save" class="btn btn-primary pull-right">
                                        <i class="fa fa-save"></i> {{ 'Save'|trans }}
                                    </button>
                                    <a href="{{ path('variety_index') }}">
                                        <button class="btn btn-success btn-xd pull-right">{{'Voltar'|trans}}</button>
                                    </a>
                                </div>

                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}

    {% include view('helper.chosen') with({
    element: '#appbundle_component_variety_maker',
    path: path('maker_fast_create')
    }) %}

{% endblock %}
