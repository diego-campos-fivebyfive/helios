{% extends view('layout') %}

{% block body %}

    <style>
        .input-group.m-b{
            width: 50%;
        }
        .check-label {
            vertical-align: middle;
            padding-right: 5px;
        }
    </style>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5><label>{{ variety.code }} - {{ variety.description }}</label></h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-12">

                                {{ form_start(form,{attr:{enctype:'multipart/form-data'}}) }}

                                <div class="panel panel-success">
                                    <div class="panel-heading">
                                        &nbsp; Regras de Negócio
                                    </div>
                                    <div class="panel-body">
                                        <div class="form-group col-md-6">
                                            {{ form_label(form.princingLevels, 'Disponível nos níveis de desconto') }}
                                            {{ form_widget(form.princingLevels, {attr:{class:'form-control'}}) }}
                                        </div>
                                        <div class="form-group col-md-6">
                                            {{ form_label(form.generatorLevels, 'Disponível no gerador') }}
                                            {{ form_widget(form.generatorLevels, {attr:{class:'form-control'}}) }}
                                        </div>
                                        <div class="form-group col-md-6">
                                            {{ form_widget(form.required)}}
                                            {{ form_label(form.required, 'Vincular esta variedade com qualquer sistema gerado.', {label_attr:{class:'check-label'}}) }}
                                        </div>
                                    </div>
                                </div>

                                {% if member.isPlatformMaster %}
                                    <div class="panel panel-primary">
                                        <div class="panel-heading">
                                            &nbsp; Dados gerais
                                        </div>
                                        <div class="panel-body">

                                            <div class="form-group col-md-3">
                                                {{ form_label(form.code, 'Código') }}
                                                {{ form_widget(form.code,{attr:{class:'form-control'}}) }}
                                            </div>

                                            <div class="form-group col-md-3">
                                                {{ form_row(form.maker,{attr:{class:'form-control'}}) }}
                                            </div>

                                            <div class="form-group col-md-6">
                                                {{ form_row(form.description,{attr:{class:'form-control'}}) }}
                                            </div>

                                            <div class="form-group col-md-3">
                                                {{ form_label(form.minPowerSelection, 'Potência mínima para seleção') }}
                                                {{ form_widget(form.minPowerSelection,{attr:{class:'form-control'}}) }}
                                            </div>

                                            <div class="form-group col-md-3">
                                                {{ form_label(form.maxPowerSelection, 'Potência máxima para seleção') }}
                                                {{ form_widget(form.maxPowerSelection,{attr:{class:'form-control'}}) }}
                                            </div>

                                            <div class="form-group col-md-4">
                                                {{ form_label(form.alternative, 'Variedade alternativa') }}
                                                {{ form_widget(form.alternative,{attr:{class:'form-control'}}) }}
                                            </div>

                                            <div class="form-group col-md-2">
                                                {{ form_label(form.position, 'Posição') }}
                                                {{ form_widget(form.position, {attr:{class:'form-control'}}) }}
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label> Datasheet (PDF) </label>
                                                <input type="file" name="dataSheet" accept="application/pdf">
                                                {% if variety.datasheet %}
                                                    <span class="label info">
                                                    Este componente já possui datasheet
                                                </span>
                                                {% endif %}
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label> Imagem (JPG) </label>
                                                <input type="file" name="image" accept="image/jpeg">
                                                {% if variety.image %}
                                                    <span class="label info">
                                                    Este componente já possui imagem
                                                </span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="panel panel-success technical_data">
                                        <div class="panel-heading">
                                            &nbsp; Dados Técnicos
                                        </div>
                                        <div class="panel-body">

                                            <div class="form-group col-md-4">
                                                {{ form_label(form.type, 'Tipo') }}
                                                <div class="input-group m-b">
                                                    {{ form_widget(form.type,{attr:{class:'form-control'}}) }}
                                                </div>
                                            </div>

                                            <div class="form-group col-md-4">
                                                {{ form_label(form.subtype, 'Sub-Tipo') }}
                                                <div class="input-group m-b">
                                                    {{ form_widget(form.subtype,{attr:{class:'form-control'}}) }}
                                                </div>
                                            </div>

                                            <div class="form-group col-md-4">
                                                {{ form_label(form.power, 'Potência') }}
                                                <div class="input-group m-b">
                                                    {{ form_widget(form.power,{attr:{class:'form-control', min:'0'}}) }}
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                {% endif %}

                                <div class="form-group clearfix pull-right">
                                    <button type="submit" name="intention" value="save" class="btn btn-primary">
                                        <i class="fa fa-save"></i> {{ 'Save'|trans }}
                                    </button>
                                    <a href="{{ path('variety_index') }}">
                                        <button class="btn btn-success btn-xd">{{'Voltar'|trans}}</button>
                                    </a>
                                </div>

                                <div class="hide">
                                    {{ form_rest(form) }}
                                </div>

                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}

    {% include view('helper.chosen_levels') %}

    <script>
        var sanitize = function (element) {
            function clear(v) {
                return v.replace(/\D+/g, '');
            }

            var value = element.val();
            var backup = value.replace(/\./g, ',');
            value = clear(value);
            if (backup.indexOf(',') > 0) {
                var commas = backup.split(',');
                value = clear(commas[0]) + ',';
                if (commas[1].length) {
                    value += clear(commas[1]);
                }
            }
            if (0 == backup.indexOf('-')) {
                if (2 == backup.split('-').length) {
                    value = '-' + value;
                }
            }
            element.val(value);
        };

        var custom_mask = function (element) {
            element.on('keyup', function () {
                sanitize(element);
            });
        };

        var common_mask = {pattern: '##,##', reverse: true};
        var targets = {
            'appbundle_component_variety_cmvProtheus': common_mask,
            'appbundle_component_variety_cmvApplied': common_mask,
            'appbundle_component_variety_minPowerSelection': common_mask,
            'appbundle_component_variety_maxPowerSelection': common_mask
        };

        $.each(targets, function (id, options) {
            custom_mask($('#' + id));
        });

        $('#appbundle_component_variety_alternative option[value=""]').html('Nenhum');

        $('#appbundle_component_variety_alternative').chosen();

    </script>

{% endblock %}
