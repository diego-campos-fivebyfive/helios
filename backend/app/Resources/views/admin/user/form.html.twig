{% extends view('layout') %}

{% block body %}
    <style>
        .top{
            margin-top: 20px;
        }
        input[type=checkbox]{
            margin-left: 5px;
        }
    </style>
    <div  class="wrapper wrapper-content">

        <div class="row">
            <div class="col-md-12">

                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            &nbsp; <i class="fa fa-plus-square"></i> Usuário Sices
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <div class="row">

                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <i class="fa fa-cog"></i> Cadastro
                                </div>
                                <div class="panel-body">

                                    {{ form_start(form) }}

                                    <div class="col-md-4">
                                        <div class="form-group col-md-12">
                                            {{ form_widget(form.user.enabled) }} &nbsp;
                                            {{ form_label(form.user.enabled, 'Ativo') }}<br/>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group col-md-4">
                                            {{ form_label(form.firstname, 'Nome') }}
                                            {{ form_widget(form.firstname, {'attr':{'class':'form-control', 'data-placeholder':'Nome de usuário'}}) }}
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_label(form.email, 'Email') }}
                                            {{ form_widget(form.email, {'attr':{'class':'form-control', 'data-placeholder':'Email'}})}}
                                        </div>

                                        {% if attribute(form.user, 'roles') is defined %}
                                            <div class="form-group col-md-4">
                                                {{ form_label(form.user.roles, 'Nível de Usuário') }}
                                                {{ form_widget(form.user.roles, {attr:{class:'form-control'}}) }}
                                            </div>
                                            <div id="member_states" class="form-group col-md-12">
                                                {{ form_label(form.attributes.states, 'Estados atendidos') }}
                                                {{ form_widget(form.attributes.states, {attr:{class:'form-control'}}) }}
                                            </div>
                                        {% endif %}

                                    </div>
                                    <div class="form-group col-md-12">
                                        {% if attribute(form.user, 'plainPassword') is defined %}
                                            <div class="form-group col-md-4">
                                                {{ form_label(form.user.plainPassword, 'Senha') }}
                                                {{ form_widget(form.user.plainPassword, {'attr':{'class':'form-control', 'data-placeholder':'Senha de acesso'}}) }}
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="hidden">
                                        {{ form_widget(form.user.email) }}
                                    </div>

                                    <div class="hidden">
                                        {{ form_widget(form.user.username)}}
                                    </div>

                                    <div class="col-md-12">
                                        <input type="submit" class="btn btn-primary pull-right" value="Salvar" />
                                    </div>
                                    {{ form_end(form) }}

                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>

    <script src="{{ asset('assets/toastr/toastr.min.js') }}"></script>

    <script>

        var member_roles = $('#member_user_roles');
        var input_states = $('#member_attributes_states');

        function showStates() {
            var member_states = $('#member_states');

            if (member_roles.val() == 'ROLE_PLATFORM_EXPANSE') {
                member_states.removeClass('hide');
                input_states.attr('required','required');
            } else {
                member_states.addClass('hide');
                input_states.removeAttr('required');
            }
        }

        $(function () {
            input_states.chosen({});

            member_roles.on('change', function () {
                showStates();
            });
            showStates();
        });

        function display_error(message){
            toastr.error(message, '', {
                positionClass: 'toast-top-center',
                progressBar: true,
                preventDuplicates: true
            });
        }

        $('#member_email').change(function () {
            $('#member_user_username').val($(this).val());
            $('#member_user_email').val($(this).val());
        });

        $('#member_user_roles').removeAttr('multiple');

    </script>
    {% if errors|length %}
        <script>
            {% for key, error in errors if 0 == key %}
            display_error('{{ error.message|trans([],'messages') }}');
            {% endfor %}
        </script>
    {% endif %}
{% endblock %}
