{% extends view('layout') %}

{% block body %}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row" id="real-content">
        <div class="col-md-12">
            <div class="ibox flow-h">
                <div class="ibox-content flow-lg">
                    <div class="row" style="min-height: 450px;">
                        <div class="col-md-12">

                            {{ form_start(form) }}

                            <div class="form-group col-md-8">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name,{attr:{class:'form-control'}}) }}
                            </div>
                            <div class="form-group col-md-4">
                                {{ form_label(form.status) }}
                                {{ form_widget(form.status,{attr:{class:'form-control'}}) }}
                            </div>
                            <div class="form-group col-md-8">
                                {{ form_label(form.levels, 'NÃ­veis de Desconto') }}
                                {{ form_widget(form.levels,{attr:{class:'form-control'}}) }}
                            </div>


                            {{ form_rest(form) }}

                            <div class="form-group col-md-12">

                            <button type="submit" class="btn btn-success btn-md pull-right">
                                <i class="fa fa-save"></i> Salvar
                            </button>

                            </div>

                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block scripts %}

    <script>
        $('#memorial_levels').chosen();
    </script>

{% endblock %}
