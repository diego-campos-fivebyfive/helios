<table id="table_transaction" data-transactions="{{ route('list_transactions_stock', {id:component.id, family:component.family}) }}" class="table table-bordered">
    <thead>
    <tr class="m-table-header">
        <th colspan="3">
            <div class="col-md-">
                <h2 class="text-center">Transações</h2>
                <form id="transactions_filter" action="{{ route('list_transactions_stock', {id:component.id, family:component.family}) }}">
                    <div class="col-md-5 filters">
                        <input id="date" name="date" class="form-control" placeholder="Filtrar por data">
                    </div>
                    <div class="col-md-5 filters">
                        <input type="hidden" value="t.description" name="filter_name">
                        <input name="filter_value" class="form-control" placeholder="Pesquisar">
                    </div>
                    <div class="col-md-2 filters">
                        <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-search"></i> Filtrar</button>
                    </div>
                </form>
            </div>
        </th>
    </tr>
    <tr class="m-table-header">
        <th colspan="">
            Data
        </th>
        <th colspan="">
            Descrição
        </th>
        <th colspan="">
            Quantidade
        </th>
    </tr>
    </thead>
    <tbody id="transaction_content">
    </tbody>
</table>

<script>

    TransactionStock = {
        form: $('#transactions_filter'),
        tableTransaction: $('#table_transaction'),
        transactionContent: $('#transaction_content'),
        loadTransactions: function () {
            $.ajax({
                url: TransactionStock.tableTransaction.data('transactions'),
                complete: function (xhr) {
                    TransactionStock.transactionContent.html(xhr.responseText);
                }
            });
        },
        datePicker: function (element) {
            element.daterangepicker({
                locale: {
                    format: 'DD/MM/YYYY',
                    daysOfWeek: ["Dom", "Seg", "Ter", "Qua", "Qui", "Sex", "Sab"],
                    monthNames: [
                        "Janeiro",
                        "Fevereiro",
                        "Março",
                        "Abril",
                        "Maio",
                        "Junho",
                        "Julho",
                        "Agosto",
                        "Setembro",
                        "Outubro",
                        "Novembro",
                        "Dezembro"
                    ]
                }
            });
            element.val('');
        },
        filter: function () {
            this.form.on('submit', function (event) {
                event.preventDefault();
                $.ajax({
                    url: this.action,
                    data: TransactionStock.form.serialize(),
                    complete: function (xhr) {
                        TransactionStock.transactionContent.html(xhr.responseText);
                    }
                });
            });
        },
        init: function () {
            this.filter();
            this.loadTransactions();
            this.datePicker($('#date'));
        }
    };

    TransactionStock.init();
</script>
