<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">

            <div class="ibox product-detail">
                <div class="ibox-content">

                    <div class="row">

                        <div class="col-md-5">

                            {#<h2 class="font-bold m-b-xs">

                            </h2>#}
                            <div class="m-t-md">
                                 <h2 class="product-main-price">
                                     {{ inverter.model }}
                                 </h2>
                             </div>
                            <hr>
                            <div class="product-images">
                                <div>
                                    <img class="col-md-12" src="{{ inverter.image|componentFilePath }}"/>
                                </div>
                            </div>

                        </div>

                        <div class="col-md-7">
                            <div class="table-responsive">
                                <table class="table table-stripped table-bordered table-hover">
                                    <thead>
                                    <tr>
                                        <th colspan="2">
                                            Dados Gerais
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td width="40%">{{ 'Maker'|trans }}</td>
                                        <td>{{ inverter.maker.name }}</td>
                                    </tr>
                                    <tr>
                                        <td>{{ 'Model'|trans }}</td>
                                        <td>{{ inverter.model }}</td>
                                    </tr>
                                    {% if inverter.datasheet %}
                                        <tr>
                                            <td>{{ 'Datasheet'|trans }} PDF</td>
                                            <td>
                                                <a href="{{ inverter.datasheet|componentFilePath }}" target="_blank">
                                                    {{ 'View'|trans }}
                                                </a>
                                            </td>
                                        </tr>
                                    {% endif %}
                                    </tbody>

                                    <thead>
                                    <tr>
                                        <th colspan="2">
                                            Dados Técnicos
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>Potência Nominal</td>
                                        <td>{{ inverter.nominalPower|decimal }} kW</td>
                                    </tr>
                                    <tr>
                                        <td>Número de MPPTs</td>
                                        <td>{{ inverter.mpptNumber }}</td>
                                    </tr>
                                    <tr>
                                        <td>Eficiência</td>
                                        <td>{{ inverter.maxEfficiency|decimal }}%</td>
                                    </tr>

                                    <thead>
                                    <tr>
                                        <th colspan="2">
                                            Dados de Entrada
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>Potência Máxima</td>
                                        <td>{{ inverter.maxDcPower|decimal }} kW</td>
                                    </tr>
                                    <tr>
                                        <td>Tensão Máxima</td>
                                        <td>{{ inverter.maxDcVoltage|decimal }} V</td>
                                    </tr>
                                    <tr>
                                        <td>Corrente Máxima por MPPT</td>
                                        <td>{{ inverter.maxDcCurrentMppt|decimal }} A</td>
                                    </tr>
                                    <tr>
                                        <td>Tensão Mínima de MPPT</td>
                                        <td>{{ inverter.mpptMin|decimal }} V</td>
                                    </tr>
                                    <tr>
                                        <td>Tensão Máxima de MPPT</td>
                                        <td>{{ inverter.mpptMax|decimal }} V</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>