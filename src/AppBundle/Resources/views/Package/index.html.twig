{% extends view('layout') %}

{% block styles %}
    <link href="{{ asset('inspinia/css/plugins/footable/footable.core.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">

                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <input type="text" class="form-control input-sm m-b-xs" id="filter" placeholder="Pesquisar">

                        <table id="footable" class="footable table table-stripped" data-page-size="8" data-filter=#filter>
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Nome</th>
                                <th data-hide="phone,tablet">Descrição</th>
                                <th>Valor</th>
                                <th>Teste [dias]</th>
                                <th>Membros [Nro máx.]</th>
                                <th>&nbsp;</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for package in packages %}

                            <tr class="gradeX">
                                <td>{{ package.id }}</td>
                                <td>{{ package.name }}</td>
                                <td>{{ package.description }}</td>
                                <td>{{ package.price }}</td>
                                <td>{{ package.trail }}</td>
                                <td>{{ package.maxMembers }}</td>
                                <td class="center">
                                    <a href="{{ path('package_update',{'id':package.id}) }}" >
                                        {{ 'Edit'|trans }}
                                    </a>
                                </td>
                            </tr>

                            {% endfor %}

                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="5">
                                    <ul class="pagination pull-right"></ul>
                                </td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>


{% endblock %}

{% block scripts %}
    <script src="{{ asset('inspinia/js/plugins/footable/footable.all.min.js') }}"></script>
    <script>
        $(function(){
            $('#footable').footable();
        });
    </script>
{% endblock %}