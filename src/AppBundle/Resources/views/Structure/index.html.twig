{% extends view('layout') %}

{% block body %}
    {% set structures = pagination.items %}

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="ibox-content">
                <div class="row">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <td>Código</td>
                                    <td>Tipo</td>
                                    <td>Sub Tipo</td>
                                    <td>Descrição</td>
                                    <td>Tamanho</td>
                                    <td>Ações</td>
                                </tr>
                            </thead>
                            <tbody>
                                {% for structure in structures %}
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td>
                                        </td>
                                        <td>
                                            <a href="">
                                                <button class="btn btn-default btn-xs">{{'View'|trans}}</button>
                                            </a>
                                            <a href="">
                                                <button class="btn btn-default btn-xs">{{'Edit'|trans}}</button>
                                            </a>
                                            <a href="">
                                                <button class="btn btn-default btn-xs">{{'Delete'|trans}}</button>
                                            </a>

                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="5">
                                        {{ knp_pagination_render(pagination) }}
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
