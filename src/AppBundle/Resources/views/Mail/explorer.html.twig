<div class="row">
    <div class="col-lg-12">
        <div class="tabs-container">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#tab-manager">Arquivos</a></li>
            </ul>
            <div class="tab-content">
                <div id="tab-manager" class="tab-pane active">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                {{ form_start(form,{'attr':{'class':'form-inline'}}) }}

                                <div class="form-group">
                                    {{ form_widget(form.contact,{'attr':{'class':'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    <div id="spinner_files" class="sk-spinner sk-spinner-circle pull-left">
                                        {% for i in 1..12 %}
                                            <div class="sk-circle{{ i }} sk-circle"></div>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="hide">
                                    <input type="submit">
                                </div>

                                {{ form_rest(form) }}

                                {{ form_end(form) }}

                                <div class="hr-line-dashed"></div>
                            </div>

                            <div class="col-lg-12" id="contact_files">
                            </div>

                            <div class="col-lg-12">
                                <h4> Os arquivos enviados aqui irão para o diretório do contato selecionado acima </h4>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function(){

        var form_explorer = $('form[name="explorer"]');
        var choice_contact = $('#explorer_contact');
        var spinner_files = $('#spinner_files');

        form_explorer.on('submit', function(event){
            event.preventDefault();

            spinner_files.fadeIn();

            $.ajax({
                url: '{{ path('mail_explorer') }}',
                data: $(this).serialize(),
                method: 'post',
                success: function(response){
                    $('#contact_files').html(response);
                    spinner_files.fadeOut();
                }
            });
        }).trigger('submit');

        choice_contact.on('change', function(){
            form_explorer.trigger('submit');
        });

    });
</script>