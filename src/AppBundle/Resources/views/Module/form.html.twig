{% extends view('layout') %}

{% block body %}

    {#{% set componentAccount = module.account %}
    {% set currentAccount = app.user.info.account %}
    {% set isEdition = (componentAccount is null) or (currentAccount.id == componentAccount.id) %}#}

    <style>
        .input-group.m-b {
            width: 35%;
        }

        .width_adjust {
            width: 40%;
        }
    </style>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5></h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-12">

                                {{ form_start(form,{attr:{enctype:'multipart/form-data'}}) }}

                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        &nbsp; Dados gerais
                                    </div>
                                    <div class="panel-body">

                                        <div class="form-group col-md-4">
                                            {{ form_row(form.maker,{attr:{class:'form-control'}}) }}
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_row(form.model,{attr:{class:'form-control'}}) }}
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_label(form.cellType, 'Tipo de Célula') }}
                                            {{ form_widget(form.cellType,{attr:{class:'form-control'}}) }}
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_label(form.cellNumber, 'Número de Células') }}
                                            {{ form_widget(form.cellNumber,{attr:{class:'form-control'}}) }}
                                        </div>

                                        <div class="form-group col-md-4">
                                            <label> Datasheet (PDF) </label>
                                            <input type="file" name="dataSheet" accept="application/pdf">
                                            {% if module.datasheet %}
                                                <span class="label info">
                                                    Este componente já possui datasheet
                                                </span>
                                            {% endif %}
                                        </div>

                                        <div class="form-group col-md-4">
                                            <label> Imagem (JPG) </label>
                                            <input type="file" name="image" accept="image/jpeg">
                                            {% if module.image %}
                                                <span class="label info">
                                                    Este componente já possui imagem
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>

                                <div class="panel panel-success">
                                    <div class="panel-heading">
                                        &nbsp; Dados do STC
                                    </div>
                                    <div class="panel-body">

                                        <div class="col-md-4">
                                            {{ form_label(form.maxPower, 'Potência') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.maxPower,{attr:{class:'form-control'}}) }}
                                                <span class="input-group-addon">W</span>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_label(form.voltageMaxPower, 'Tensão de Operação (Vmp)') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.voltageMaxPower,{attr:{class:'form-control'}}) }}
                                                <span class="input-group-addon">V</span>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_label(form.currentMaxPower, 'Corrente de Operação (Imp)') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.currentMaxPower,{attr:{class:'form-control'}}) }}
                                                <span class="input-group-addon">A</span>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_label(form.openCircuitVoltage, 'Tensão de Circuito Aberto (Voc)') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.openCircuitVoltage,{attr:{class:'form-control'}}) }}
                                                <span class="input-group-addon">V</span>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_label(form.shortCircuitCurrent, 'Corrente de Curto Circuito (Isc)') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.shortCircuitCurrent,{attr:{class:'form-control'}}) }}
                                                <span class="input-group-addon">A</span>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_label(form.efficiency, 'Eficiência') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.efficiency,{attr:{class:'form-control'}}) }}
                                                <span class="input-group-addon">%</span>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                                <div class="panel panel-warning">
                                    <div class="panel-heading">
                                        &nbsp; Temperaturas
                                    </div>
                                    <div class="panel-body">

                                        <div class="form-group col-md-6">
                                            {{ form_label(form.temperatureOperation, 'Temperatura Nominal de Operação da Célula (NOCT)') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.temperatureOperation,{attr:{class:'form-control'}}) }}
                                                <span class="input-group-addon width_adjust">ºC</span>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6">
                                            {{ form_label(form.tempCoefficientMaxPower, 'Coeficiente de Temperatura (Pmax)') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.tempCoefficientMaxPower,{attr:{class:'form-control'}}) }}
                                                <span class="input-group-addon">% / ºC</span>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6">
                                            {{ form_label(form.tempCoefficientOpenCircuitVoltage, 'Coeficiente de Temperatura (Voc)') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.tempCoefficientOpenCircuitVoltage,{attr:{class:'form-control'}}) }}
                                                <span class="input-group-addon">% / ºC</span>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6">
                                            {{ form_label(form.tempCoefficientShortCircuitCurrent, 'Coeficiente de Temperatura (Isc)') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.tempCoefficientShortCircuitCurrent,{attr:{class:'form-control'}}) }}
                                                <span class="input-group-addon">% / ºC</span>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    {{ form_label(form.status, 'Ativo') }}
                                    <br>
                                    {{ form_widget(form.status) }}
                                </div>
                                <div class="form-group">
                                    <button type="submit" name="intention" value="save" class="btn btn-primary pull-right">
                                        <i class="fa fa-save"></i> {{ 'Save'|trans }}
                                    </button>
                                </div>

                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}

    <script>
        var sanitize = function (element) {
            function clear(v) {
                return v.replace(/\D+/g, '');
            }

            var value = element.val();
            var backup = value.replace(/\./g, ',');
            value = clear(value);
            if (backup.indexOf(',') > 0) {
                var commas = backup.split(',');
                value = clear(commas[0]) + ',';
                if (commas[1].length) {
                    value += clear(commas[1]);
                }
            }
            if (0 == backup.indexOf('-')) {
                if (2 == backup.split('-').length) {
                    value = '-' + value;
                }
            }
            element.val(value);
        };
    </script>

    <script>

        var custom_mask = function (element) {
            element.on('keyup', function () {
                sanitize(element);
            });
        };

        var common_mask = {pattern: '##,##', reverse: true};
        var targets = {
            'module_efficiency': common_mask,
            'module_maxPower': common_mask,
            'module_voltageMaxPower': common_mask,
            'module_currentMaxPower': common_mask,
            'module_openCircuitVoltage': common_mask,
            'module_shortCircuitCurrent': common_mask,
            //'module_temperatureOperation': common_mask,
            'module_tempCoefficientMaxPower': common_mask,
            'module_tempCoefficientOpenCircuitVoltage': common_mask,
            'module_tempCoefficientShortCircuitCurrent': common_mask
        };

        $.each(targets, function (id, options) {
            custom_mask($('#' + id));
        });

        $('#module_cellNumber').mask('0#', {reverse: false});
        $('#module_temperatureOperation').mask('0#', {reverse: false});

    </script>

    {% include view('helper.chosen') with({
    element: '#module_maker',
    path: path('maker_fast_create')
    }) %}
{% endblock %}