{% extends view('layout') %}

{% block body %}

    {#{% set componentAccount = inverter.account %}#}
    {#{% set currentAccount = app.user.info.account %}#}
    {#{% set isEdition = (componentAccount is null) or (currentAccount.id == componentAccount.id) %}#}

    <style>
        .input-group.m-b{
            width: 50%;
        }
    </style>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5></h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-12">

                                {{ form_start(form,{attr:{enctype:'multipart/form-data'}}) }}

                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        &nbsp; Dados gerais
                                    </div>
                                    <div class="panel-body">

                                        <div class="form-group col-md-6">
                                            {{ form_label(form.code, 'Código') }}
                                            {{ form_widget(form.code,{attr:{class:'form-control'}}) }}
                                        </div>

                                        <div class="form-group col-md-6">
                                            {{ form_row(form.description,{attr:{class:'form-control'}}) }}
                                        </div>

                                    </div>
                                </div>

                                <div class="panel panel-success technical_data">
                                    <div class="panel-heading">
                                        &nbsp; Dados Técnicos
                                    </div>
                                    <div class="panel-body">

                                        <div class="col-md-4">
                                            {{ form_label(form.inputs, 'Entradas') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.inputs,{attr:{class:'form-control'}}) }}
                                                {#<span class="input-group-addon">kW</span>#}
                                            </div>
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_label(form.outputs, 'Saídas') }}
                                            <div class="input-group m-b">
                                            {{ form_widget(form.outputs,{attr:{class:'form-control'}}) }}
                                            </div>
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_label(form.fuses, 'Fusíveis') }}
                                            <div class="input-group m-b">
                                                {{ form_widget(form.fuses,{attr:{class:'form-control'}}) }}
                                            </div>
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_label(form.maker, 'Fabricante') }}
                                            {{ form_widget(form.maker,{attr:{class:'form-control'}}) }}
                                        </div>

                                    </div>
                                </div>

                                <div class="form-group">
                                    <button type="submit" name="intention" value="save" class="btn btn-primary pull-right">
                                        <i class="fa fa-save"></i> {{ 'Save'|trans }}
                                    </button>
                                </div>

                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

