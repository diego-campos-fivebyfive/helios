{% extends view('layout') %}

{% block body %}

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5></h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-12">

                                {{ form_start(form,{attr:{enctype:'multipart/form-data'}}) }}

                                <div class="panel panel-primary input_data">
                                    <div class="panel-heading">
                                        &nbsp; Dados
                                    </div>
                                    <div class="panel-body">

                                        <div class="form-group col-lg-12">
                                            {{ form_widget(form.description,{attr:{class:'form-control', 'placeholder':'Descrição do Extra'}}) }}
                                            <div class="hr-line-dashed"></div>
                                        </div>
                                        <div class="form-group col-md-4">
                                            {{ form_label(form.type, 'Tipo do Extra') }}
                                            {{ form_widget(form.type,{attr:{class:'form-control'}}) }}
                                        </div>
                                        <div class="form-group col-lg-4">
                                            {{ form_label(form.pricingBy, 'Preço por') }}
                                                {{ form_widget(form.pricingBy,{attr:{class:'form-control'}}) }}
                                        </div>
                                        <div class="form-group col-lg-4" id="costPrice">
                                            {{ form_label(form.costPrice, 'Valor do Extra') }}
                                            {{ form_widget(form.costPrice,{attr:{class:'form-control', 'placeholder': 'R$ 000,00'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <button type="submit" name="intention" value="save" class="btn btn-primary pull-right">
                                        <i class="fa fa-save"></i> {{ 'Save'|trans }}
                                    </button>
                                    <a href="{{ path('extras_index') }}">
                                        <button class="btn btn-success btn-xd pull-right">{{'Voltar'|trans}}</button>
                                    </a>
                                </div>

                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
<script>
    $(function() {
    $('#costPrice').maskMoney({prefix:'R$ ', allowNegative: true, thousands:'.', decimal:',', affixesStay: false}); })
</script>
{% endblock %}