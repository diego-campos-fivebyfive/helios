{% extends view('layout') %}

{% block body %}

    <h1>Items list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Type</th>
                <th>Pricingby</th>
                <th>Costprice</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.description }}</td>
                <td>{{ item.type }}</td>
                <td>{{ item.pricingBy }}</td>
                <td>{{ item.costPrice }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('items_edit', { 'id': item.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('items_create') }}">Create a new item</a>
        </li>
    </ul>

{% endblock %}
