{% extends "FOSUserBundle::layout.html.twig" %}

{% block title %} Redefinir senha {% endblock %}

{% block fos_user_content %}

    {% trans_default_domain 'FOSUserBundle' %}

    <h3 class="block-title">
        Redefinir senha de acesso
    </h3>

    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}

    <div class="form-group">
        {{ form_widget(form.plainPassword.first,{attr:{class:'form-control', placeholder:'form.password'|trans}}) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.plainPassword.second,{attr:{class:'form-control', placeholder:'form.password_confirmation'|trans}}) }}
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-block btn-primary">
            <i class="fa fa-angle-double-right"></i> {{ 'resetting.reset.submit'|trans }}
        </button>
    </div>

    {{ form_end(form) }}

{% endblock fos_user_content %}

{% block scripts %}
    {% if errors.count %}
        <script>
            {% for error in errors %}
                display_error('{{ error.message }}');
            {% endfor %}
        </script>
    {% endif %}
{% endblock %}