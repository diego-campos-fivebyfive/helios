#!/usr/bin/env bash

if [[ $1 == 'undefined' ]]; then
  if [[ $2 == 'true' ]]; then
    message='*<https://github.com/sices/sices/blob/master/docs/meetings/roadmap/draft.md|Draft updated>*'
  else
    message='"someone commited on master..."'
  fi

  $CLI_PATH/ces-slack-notify --devops "$message"
  exit 0
fi

message="[issue-${1}] successfully merged to homolog"
stage=$($CLI_PATH/ces-issue-info $1 --stage)

if [[ $stage == 'Review' ]]; then
  $CLI_PATH/ces-issue-move $1 --testing-tech
fi

$CLI_PATH/ces-app-deploy --$CES_AMBIENCE
$CLI_PATH/ces-slack-notify --devops "$message"
