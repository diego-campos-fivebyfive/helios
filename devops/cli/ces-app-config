#!/usr/bin/env bash

cd $SICES_PATH

echo "Starting App configurations..."

$CLI_PATH/util/variables-replacer

if [ -z ${1+x} ] || [ $1 = '--development' ]; then

  mkdir $CLI_PATH/stash/temp
  cp $CLI_PATH/util/pre-push .git/hooks/pre-push
  $CLI_PATH/util/github-credentials --config
  $CLI_PATH/ces-database-config --development

else

  mkdir .temp
  mkdir .mirror
  mkdir .backup
  mkdir .uploads
  mkdir .uploads/component
  mkdir .uploads/component/datasheet
  mkdir .uploads/component/image
  mkdir .uploads/fiscal
  mkdir .uploads/fiscal/danfe
  mkdir .uploads/order
  mkdir .uploads/order/order
  mkdir .uploads/order/payment
  mkdir .uploads/order/proforma
  mkdir .uploads/proposal
  mkdir .uploads/proposal/proposal
  mkdir .uploads/proposal/theme

fi
