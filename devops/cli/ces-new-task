#!/usr/bin/env bash

cd $SICES_PATH

if [[ -z $1 ]] || [[ $1 == '--help' ]] || [[ $1 == '-h' ]]; then
  printf "ces-new-task - help:

  Usage:

  ces-new-task issue-[NUMBER]

  Exemple:

  ces-new-task issue-1\n"
  exit 0;
fi

git checkout master
git fetch origin
git pull origin master
git checkout -b $1

exec devops/cli/ces-database-update

echo "Done, now on Branch: $1"
