#!/usr/bin/env bash

SLACK_CHANNEL=${1/--/}
SLACK_URI=$(eval "echo \$SLACK_HOOK_${SLACK_CHANNEL^^}")
MESSAGE=$(echo ${2:0:1500} | sed 's/"/\\"/g')

if [[ $SLACK_CHANNEL == 'tasks' ]]; then
  JSON="{\"attachments\":[{\"fallback\":\"${MESSAGE}\"}]}"
else
  JSON="{\"text\": \"${MESSAGE}\", \"link_names\": \"1\"}"
fi

if [[ -n $SLACK_URI ]]; then
  echo "Sending Slack notification..."

  curl -s -X POST \
    -H "Content-type:application/json" \
    -d "${JSON}" $SLACK_URI > /dev/null 2>&1
else
  echo "Error: something unexpected occurred, \
    make sure channel ${SLACK_CHANNEL} is valid channel option"
fi
