#!/usr/bin/env bash

source $SICES_PATH/devops/cli/config/variables

if [ -z ${1+x} ] || [ $1 == '--development' ]; then

  export CES_SICES_PORT=$SICES_DEVELOPMENT_PORT
  export CES_SICES_HOST=$SICES_DEVELOPMENT_HOST
  export CES_BUNDLE_PORT=$BUNDLE_DEVELOPMENT_PORT
  export CES_BUNDLE_HOST=$BUNDLE_DEVELOPMENT_HOST
  export CES_ISQUIK_PORT=$ISQUIK_HOMOLOG_SERVER_PORT
  export CES_ISQUIK_HOST=$ISQUIK_HOMOLOG_SERVER_HOST
  export CES_ISQUIK_AUTH_KEY=$ISQUIK_HOMOLOG_AUTH_KEY
  export CES_ISQUIK_AUTH_USER=$ISQUIK_HOMOLOG_AUTH_USER

elif [ $1 == '--homolog' ]; then

  export CES_SICES_PORT=$SICES_HOMOLOG_PORT
  export CES_SICES_HOST=$SICES_HOMOLOG_HOST
  export CES_BUNDLE_PORT=$BUNDLE_HOMOLOG_PORT
  export CES_BUNDLE_HOST=$BUNDLE_HOMOLOG_HOST
  export CES_ISQUIK_PORT=$ISQUIK_HOMOLOG_SERVER_PORT
  export CES_ISQUIK_HOST=$ISQUIK_HOMOLOG_SERVER_HOST
  export CES_ISQUIK_AUTH_KEY=$ISQUIK_HOMOLOG_AUTH_KEY
  export CES_ISQUIK_AUTH_USER=$ISQUIK_HOMOLOG_AUTH_USER

elif [ $1 == '--production' ]; then

  export CES_SICES_PORT=$SICES_PRODUCTION_PORT
  export CES_SICES_HOST=$SICES_PRODUCTION_HOST
  export CES_BUNDLE_PORT=$BUNDLE_PRODUCTION_PORT
  export CES_BUNDLE_HOST=$BUNDLE_PRODUCTION_HOST
  export CES_ISQUIK_PORT=$ISQUIK_PRODUCTION_SERVER_PORT
  export CES_ISQUIK_HOST=$ISQUIK_PRODUCTION_SERVER_HOST
  export CES_ISQUIK_AUTH_KEY=$ISQUIK_PRODUCTION_AUTH_KEY
  export CES_ISQUIK_AUTH_USER=$ISQUIK_PRODUCTION_AUTH_USER

fi
