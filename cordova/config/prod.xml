        <icon src="./assets/media/ios/icons/icon.png" width="57" height="57" />
        <icon src="./assets/media/ios/icons/icon@2x.png" width="114" height="114" />
        <icon src="./assets/media/ios/icons/icon-72.png" width="72" height="72" />
